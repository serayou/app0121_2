<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/animalInfo_name"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center"
        android:text="Text"
        android:textSize="24dp"
        android:textStyle="bold" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/aniamlInfo_ViewPager"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:background="@color/backgroundColor_info">






    </androidx.viewpager.widget.ViewPager>





    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        >


        <ImageButton
            android:id="@+id/animalInfo_pre_imageButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/btn_previous"
            android:layout_marginRight="20dp"
            android:scaleType="fitCenter"
            android:background="#FFFFFF"/>

        <ImageButton
            android:id="@+id/animalInfo_next_imageButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/btn_next"
            android:scaleType="fitCenter"
            android:background="#FFFFFF"
            />


    </LinearLayout>
</LinearLayout>
